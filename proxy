const data = {
    message: "Hello"
  }
  
  const handler = {
    set(target, key, value) {
      console.log('target', target);
      console.log('key', key);
      console.log('value', value);
  
    }
  }
  
  const proxy = new Proxy(data, handler);
  proxy.message = 'Hello world'

  

  //////////////////////////////////////////////////



  const data = {
    message: "Hello",
    longMessage: "World"
  }
  
  const handler = {
    set(target, key, value) {
      if(key === "message") {
        target.longMessage = `${value} World`
      }
  
      target.value = value;
  
      // console.log('target', target);
      // console.log('key', key);
      // console.log('value', value);
  
    }
  }
  
  const proxy = new Proxy(data, handler);
  proxy.message = 'Hello world';
  
  console.log(proxy.longMessage)