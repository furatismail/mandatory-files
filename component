import { Component, OnInit, ViewChild } from '@angular/core';
import { NgForm } from '@angular/forms';
import { User } from '../user.interface';

@Component({
  selector: 'app-my-form',
  templateUrl: './my-form.component.html',
  styleUrls: ['./my-form.component.css']
})
export class MyFormComponent implements OnInit {
  @ViewChild('f') form!: NgForm;
  user = {
    account: {}
  } as User
  isValid: boolean = false;

  constructor() { }

  ngOnInit(): void {
    // this.user = {
    //   account: {
    //     email: "neco@gmail.clm",
    //     confirm: "neco@gmail.clm",
    //   },
    //   name: "neco@gmail.clm",
    // }
  }

  validateSame() {
    if (this.user.account?.confirm !== this.user.account?.email) {
      this.form.form.controls['account'].setErrors({ emailIsNotSame: true })
    } else {
      this.form.form.controls['account'].updateValueAndValidity();
    }
  }


  onSubmit({ value, valid }: { value: User, valid: boolean | null }) {
    console.log('run')
    if (valid && value?.account?.confirm === value?.account?.email) {
      console.log(value, valid);
      this.isValid = true;
    }


  }

}
